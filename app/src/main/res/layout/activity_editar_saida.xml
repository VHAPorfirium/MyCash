<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryVariant"
    android:padding="16dp">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/tvTitleSaida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Saída"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para Descrição -->
    <EditText
        android:id="@+id/etDescricaoSaida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descrição"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSaida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Campo para Valor (apresentando sinal negativo) -->
    <EditText
        android:id="@+id/etValorSaida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Valor"
        android:inputType="numberDecimal"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/etDescricaoSaida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- RadioGroup para escolher entre Crédito ou Débito -->
    <RadioGroup
        android:id="@+id/rgTipoSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/etValorSaida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbCreditoSaida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crédito"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/rbDebitoSaida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Débito"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <!-- Campo para Data (usando DatePicker ao clicar) -->
    <EditText
        android:id="@+id/etDataSaida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Data"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/rgTipoSaida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botão para Salvar as alterações -->
    <Button
        android:id="@+id/btnSalvarEdicaoSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintTop_toBottomOf="@id/etDataSaida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
