<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorPrimaryVariant">

    <!-- Título do App no Topo -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MyCash"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- GridLayout com os 3 botões redondos -->
    <GridLayout
        android:id="@+id/gridRoundButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botão: Entradas -->
        <Button
            android:id="@+id/btnEntradas"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Entradas"
            android:textSize="12sp"
            android:background="@drawable/round_button"
            android:layout_margin="8dp"/>

        <!-- Botão: Saídas -->
        <Button
            android:id="@+id/btnSaidas"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Saídas"
            android:textSize="12sp"
            android:background="@drawable/round_button"
            android:layout_margin="8dp"/>

        <!-- Botão: A Pagar -->
        <Button
            android:id="@+id/btnAPagar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="A Pagar"
            android:textSize="12sp"
            android:background="@drawable/round_button"
            android:layout_margin="8dp"/>

    </GridLayout>

    <!-- CardView para exibir Crédito e Débito (layout do cartão de crédito) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGastos"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/gridRoundButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Layout interno do CardView -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Título "Gastos:" centralizado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastos:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Container horizontal para as duas colunas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Coluna da esquerda: Entradas e Saídas -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entradas: R$ 0,00"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saídas: R$ 0,00"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Espaço entre as colunas -->
                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <!-- Coluna da direita: Crédito e Débito -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCredito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crédito: R$ 0,00"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDebito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Débito: R$ 0,00"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botão Visualizar Estrutura Financeira -->
    <Button
        android:id="@+id/btnEstruturaFinanceira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estrutura Financeira"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/cardGastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Resumo Financeiro, fixado na parte inferior -->
    <Button
        android:id="@+id/btnResumoFinanceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo Financeiro"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnEstruturaFinanceira"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
